{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "api/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/services/adminSheetService.ts",
    "src/services/provisioningService.ts",
    "src/services/exportService.ts",
    "src/config/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
